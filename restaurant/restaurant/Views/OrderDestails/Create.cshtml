@model restaurant.Models.EF.OrderDestail

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6 mt-5">
    <div class="card-body">
        <h4 class="text-left text-success"><span class="font-weight-normal">Them Loai San Pham</span></h4>
        <hr class="text-dark" />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-12">
                    <label class="control-label">OrderDate<span class="text-danger">*</span></label>
                    @*@Html.EditorFor(model => model.Order.TotalPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "UnitPrice" } })*@
                    @Html.DropDownList("OrderID", null, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Order.OrderDate, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Ten Nguoi Dung<span class="text-danger">*</span></label>
                    @*@Html.EditorFor(model => model.Order.TotalPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "UnitPrice" } })*@
                    @Html.DropDownList("UserID", null, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Order.User.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Ten San Pham<span class="text-danger">*</span></label>
                    @Html.DropDownList("ProductID", null, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Order.Product.NameProduct, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">PhoneNumber<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Order.User.PhoneNumber, new { htmlAttributes = new { @class = "form-control col-12", @placeholder = "PhoneNumber", @Type = "tel", @pattern = "[0-9]{10}" } })
                    @Html.ValidationMessageFor(model => model.Order.User.PhoneNumber, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Discount<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Order.Discount, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "Discount" } })
                    @Html.ValidationMessageFor(model => model.Order.Discount, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">UnitPrice<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "UnitPrice" } })
                    @Html.ValidationMessageFor(model => model.UnitPrice, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                </div>
            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
