@model restaurant.Models.EF.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6 mt-5">
    <div class="card-body">
        <h4 class="text-left text-success"><span class="font-weight-normal">Sua Order</span></h4>
        <hr class="text-dark" />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Order</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
            <div class="row">
                <div class="form-group col-12">
                    <label class="control-label">Ten Nguoi Dung<span class="text-danger">*</span></label>
                    @Html.DropDownList("UserID", null, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12">
                    <label class="control-label">Ten San Pham<span class="text-danger">*</span></label>
                    @Html.DropDownList("ProductID", null, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Product.NameProduct, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">OrderDate<span class="text-danger">*</span></label>
                    @*@Html.EditorFor(model => model.OrderDate.Value.ToString("dd-MM-yyyy"), new { htmlAttributes = new { @class = "form-control col-12", Type="date" } })*@
                    <input type="datetime-local" id="OrderDate" name="OrderDate" class="form-control" value="@Model.OrderDate.Value.ToString("dd/MM/yyyy HH:mm:tt")" />
                    @Html.ValidationMessageFor(model => model.OrderDate, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Trang Thai<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control col-12", @placeholder = "status" } })
                    @Html.ValidationMessageFor(model => model.Status, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Discount<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "Discount" } })
                    @Html.ValidationMessageFor(model => model.Discount, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">Quantily<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Quantily, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "Discount" } })
                    @Html.ValidationMessageFor(model => model.Quantily, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="control-label">TotalPrice<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @placeholder = "status" } })
                    @Html.ValidationMessageFor(model => model.TotalPrice, "vui long khong de trong!", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                        <input type="submit" value="Save" class="btn btn-outline-warning" />
                        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
