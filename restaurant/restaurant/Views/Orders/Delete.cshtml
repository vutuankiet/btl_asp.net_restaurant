@model restaurant.Models.EF.Order

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #orderslink {
        color: #bf9e71 !important;
    }
</style>

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6">
    <div class="card-body">
        <h4 class="text-left text-danger"><span class="font-weight-normal">Delete Order</span></h4>
        <h5 class="text-left text-danger">Are you sure you want to delete this?</h5>
        <hr class="text-dark" />
        <div class="row">
            <div class="form-group col-12">
                <label class="control-label">User name<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.User.UserName, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12">
                <label class="control-label">Product name<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Product.NameProduct, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Product.NameProduct, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Order date<span class="text-danger">*</span></label>
                @*@Html.EditorFor(model => model.OrderDate.Value.ToString("dd-MM-yyyy"), new { htmlAttributes = new { @class = "form-control col-12", Type="date" } })*@
                <input type="datetime" id="OrderDate" name="OrderDate" class="form-control" readonly="readonly" value="@Model.OrderDate.Value.ToString("dd/MM/yyyy HH:mm:tt")" />
                @Html.ValidationMessageFor(model => model.OrderDate, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Status<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly", @placeholder = "status" } })
                @Html.ValidationMessageFor(model => model.Status, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Discount (%)<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "Discount" } })
                @Html.ValidationMessageFor(model => model.Discount, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Quantily<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Quantily, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "Discount" } })
                @Html.ValidationMessageFor(model => model.Quantily, " ", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">TotalPrice ($)<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "status" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, " ", new { @class = "text-danger" })
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-group">
                <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        }

    </div>
</div>
