@model restaurant.Models.EF.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6 mt-5">
    <div class="card-body">
        <h4 class="text-left text-success"><span class="font-weight-normal">Chi Tiet Order</span></h4>
        <hr class="text-dark" />
        <div class="row">
            <div class="form-group col-12">
                <label class="control-label">Ten Nguoi Dung<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.User.UserName, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12">
                <label class="control-label">Ten San Pham<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Product.NameProduct, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Product.NameProduct, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">OrderDate<span class="text-danger">*</span></label>
                @*@Html.EditorFor(model => model.OrderDate.Value.ToString("dd-MM-yyyy"), new { htmlAttributes = new { @class = "form-control col-12", Type="date" } })*@
                <input type="datetime" id="OrderDate" name="OrderDate" class="form-control" readonly="readonly" value="@Model.OrderDate.Value.ToString("dd/MM/yyyy HH:mm:tt")" />
                @Html.ValidationMessageFor(model => model.OrderDate, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Trang Thai<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly", @placeholder = "status" } })
                @Html.ValidationMessageFor(model => model.Status, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Discount<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "Discount" } })
                @Html.ValidationMessageFor(model => model.Discount, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">Quantily<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.Quantily, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "Discount" } })
                @Html.ValidationMessageFor(model => model.Quantily, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="control-label">TotalPrice<span class="text-danger">*</span></label>
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control col-12", @Type = "number", @readonly = "readonly", @placeholder = "status" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, "vui long khong de trong!", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-outline-warning" })
                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
            </div>
        </div>

    </div>
</div>

