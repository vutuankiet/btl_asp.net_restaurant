@model restaurant.Models.EF.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #categorieslink {
        color: #bf9e71 !important;
    }
</style>

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6">
    <div class="card-body">
        <h4 class="text-left text-info"><span class="font-weight-normal">Destail Category</span></h4>
        <hr class="text-dark" />
        <div class="form-group col-12">
            <label class="control-label">Category Name<span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-outline-warning" })
                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
            </div>
        </div>

    </div>
</div>
