@model restaurant.Models.EF.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #categorieslink {
        color: #bf9e71 !important;
    }
</style>

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6">
    <div class="card-body">
        <h4 class="text-left text-danger"><span class="font-weight-normal">Delete Category</span></h4>
        <h5 class="text-left text-danger">Are you sure you want to delete this?</h5>
        <hr class="text-dark" />
        <div class="form-group col-12">
            <label class="control-label">Category Name<span class="text-danger">*</span></label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-12", @readonly = "readonly" } })
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-group">
                <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        }

    </div>
</div>
