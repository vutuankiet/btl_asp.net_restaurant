@model restaurant.Models.EF.Role

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #roleslink {
        color: #bf9e71 !important;
    }
</style>

<div class="card shadow container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-6">
    <div class="card-body">
        <h4 class="text-left text-warning"><span class="font-weight-normal">Edit Role</span></h4>
        <hr class="text-dark" />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @*<h4>Role</h4>
                <hr />*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="form-group col-12">
                    <label class="control-label">Role name<span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.NameRoles, new { htmlAttributes = new { @class = "form-control col-12", @placeholder = "Role name", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameRoles, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 ml-3 col-md-10 p-0">
                        <input type="submit" value="Save" class="btn btn-outline-warning" />
                        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-dark" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
